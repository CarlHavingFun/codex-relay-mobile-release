RELAY_BASE_URL=https://relay.example.com
RELAY_TOKEN=replace-with-strong-token
RUNNER_ID=node_local_macmini
CONNECTOR_ID=chat_connector_macmini
CONNECTOR_VERSION=0.1.0
CONNECTOR_WORKSPACE=default
CONNECTOR_MULTI_WORKSPACE=1
CONNECTOR_MAX_CONCURRENT_JOBS=1
CONNECTOR_POLL_SECONDS=2
CONNECTOR_SESSION_SYNC_SECONDS=45
CONNECTOR_SESSION_SYNC_LIMIT=40
CONNECTOR_SESSION_SYNC_METADATA_LIMIT=120
CONNECTOR_SESSION_SYNC_FULL_SCAN_LIMIT=2000
CONNECTOR_SESSION_SYNC_MESSAGES_PER_THREAD=12
CONNECTOR_SESSION_SYNC_REQUESTED_THREAD_MESSAGES=12
CONNECTOR_SESSION_SYNC_INCLUDE_ARCHIVED=1
# 0 disables auto-timeout and waits until turn completes/interrupted
CONNECTOR_TURN_TIMEOUT_MS=7200000
CONNECTOR_REQUEST_TIMEOUT_MS=120000
CODEX_BIN=codex
WORKSPACE_PATH=/absolute/path/to/workspace
PLAN_FILE=/absolute/path/to/workspace/PLAN.md
STATE_DIR=/absolute/path/to/Codex_Iphone_release/state
POLL_SECONDS=10
DASHBOARD_PORT=8788
RELAY_PORT=8787
DEFAULT_WORKSPACE=default
SERVICE_LABEL_PREFIX=com.yourorg.codexrelay

# Agent Control Plane (disabled by default to avoid impacting existing flow)
CONTROL_PLANE_ENABLED=0
CONTROL_PLANE_BASE_URL=http://127.0.0.1:8790
CONTROL_PLANE_PORT=8790
CONTROL_PLANE_GLOBAL_PARALLELISM=10
CONTROL_PLANE_TASK_PARALLELISM=8
CONTROL_PLANE_LOOP_MS=1000
CONTROL_PLANE_CIRCUIT_THRESHOLD=3

# Control Plane Relay Bridge Worker
CONTROL_PLANE_WORKER_ID=cp_bridge_local
CONTROL_PLANE_WORKER_MAX_CONCURRENT_JOBS=2
CONTROL_PLANE_WORKER_POLL_SECONDS=2
CONTROL_PLANE_WORKER_JOB_STATUS_POLL_MS=1500
CONTROL_PLANE_WORKER_REQUEST_TIMEOUT_MS=20000
CONTROL_PLANE_WORKER_DEFAULT_WORKSPACE=default
CONTROL_PLANE_WORKER_APPROVAL_POLICY=never
CONTROL_PLANE_WORKER_SANDBOX=danger-full-access
CONTROL_PLANE_WORKER_PERSONALITY=pragmatic
# CONTROL_PLANE_WORKER_MODEL=
# CONTROL_PLANE_WORKER_DRY_RUN=0
